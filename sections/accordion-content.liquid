{%- render 'section-spacing-collapsing' -%}

{%- assign text_position = section.settings.text_position -%}

<style>
  #shopify-section-{{ section.id }} {
    --section-stack-intro: {% if text_position == 'center' %}66.6667%{% else %}50%{% endif %};
    --section-stack-main: 50%;
  }
</style>

<div {% render 'section-properties' %}>
  <div class="section-stack {% if text_position != 'center' %}section-stack--horizontal{% else %}section-stack--center{% endif %} {% if text_position == 'end' %}section-stack--reverse{% endif %}">
    {%- capture content -%}
      {%- if section.settings.subheading != blank -%}
        <p class="bold">{{ section.settings.subheading | escape }}</p>
      {%- endif -%}

      {%- if section.settings.title != blank -%}
        <h2 class="h2">
          {%- render 'styled-text', content: section.settings.title, text_color: section.settings.heading_color, gradient: section.settings.heading_gradient -%}
        </h2>
      {%- endif -%}

      {{- section.settings.content -}}

      {%- if section.settings.button_text != blank -%}
        {% render 'button', content: section.settings.button_text, href: section.settings.button_url, size: 'xl', background: section.settings.button_background, text_color: section.settings.button_text_color %}
      {%- endif -%}
    {%- endcapture -%}

    {%- if content != blank -%}
      <div class="section-stack__intro">
        <div class="prose {% if text_position == 'center' %}text-center{% endif %}">
          {% if section.settings.title contains "Tree Edition" %}
            <h3 class="h3">Tree Edition</h3>
            <p class="page-text">Our Tree Scrubs are made from sustainably sourced natural raw material wood  that is treated in an innovative closed loop system, which allows for over 99% of water and solvent waste to be reused.</p>
             <div class="second-section-container">   
              <div class="second-section-image-container">
                <img class="second-section-image" src="https://cdn.shopify.com/s/files/1/2490/1254/files/Icon-Tencel_Fyseleach_page_13.png?v=1634857536"/><span class="second-section-image-text">LIGHTWEIGHT</span>
              </div>
              <div class="second-section-image-container">
                <img class="second-section-image" src="https://cdn.shopify.com/s/files/1/2490/1254/files/Icon-Tencel_Fyseleach_page_12.png?v=1634857537"/><span class="second-section-image-text">BREATHABLE</span>
              </div>
              <div class="second-section-image-container">
                <img class="second-section-image" src="https://cdn.shopify.com/s/files/1/2490/1254/files/Icon-Tencel_Fyseleach_page_11.png?v=1634857536"/><span class="second-section-image-text">SUSTAINABLE</span>
              </div>
              <div class="second-section-image-container">
                <img class="second-section-image" src="https://cdn.shopify.com/s/files/1/2490/1254/files/Icon-Tencel_Fyseleach_page_10.png?v=1634857536"/><span class="second-section-image-text">THERMAL REGULATING</span>
              </div>
            </div>
          {% elsif section.settings.title contains "Bottle Edition" %}
             <h3 class="h3">Bottle Edition</h3>
             <p class="page-text">As we continue to grow, we are always working to improve our products for our customers and the environment. So weâ€™ve made a significant switch that makes your life easier and more sustainable by switching from polyester to Recycled polyester.</p>
                <div class="second-section-container">   
                <div class="second-section-image-container">
                  <img class="second-section-image" src="https://cdn.shopify.com/s/files/1/2490/1254/files/Icon-Tencel_Fyseleach_page_9.png?v=1634857536"/><span class="second-section-image-text">ANTI-WRINKLE</span>
                </div>
                <div class="second-section-image-container">
                  <img class="second-section-image" src="https://cdn.shopify.com/s/files/1/2490/1254/files/Icon-Tencel_Fyseleach_page_8.png?v=1634857536"/><span class="second-section-image-text">RECYCLED</span>
                </div>
                <div class="second-section-image-container">
                  <img class="second-section-image" src="https://cdn.shopify.com/s/files/1/2490/1254/files/Icon-Tencel_Fyseleach_page_15.png?v=1634857536"/><span class="second-section-image-text">4-WAY STRETCH</span>
                </div>
                <div class="second-section-image-container">
                  <img class="second-section-image" src="https://cdn.shopify.com/s/files/1/2490/1254/files/Icon-Tencel_Fyseleach_page_14.png?v=1634857536"/><span class="second-section-image-text">WATER RESISTANT</span>
                </div>
            </div>
          
          {% else %}
          {{- content -}}
          {% endif %}
        </div>
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="section-stack__main">
        <div {% render 'surface', class: 'accordion-box rounded', background: section.settings.accordion_background, text_color: section.settings.accordion_text_color, background_fallback: 'bg-secondary' %}>
          {%- for block in section.blocks -%}
            {%- if block.settings.title != blank and block.settings.content != blank -%}
              {%- capture accordion_content -%}
                <div class="prose">{{ block.settings.content }}</div>
              {%- endcapture -%}

              {%- render 'accordion', title: block.settings.title, content: accordion_content, block: block -%}
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

